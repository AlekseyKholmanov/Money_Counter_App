<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <EditText
            android:id="@+id/et_category_name"
            android:minWidth="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_text_enter_category_name"
            android:layout_margin="8dp"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/text_choose_type"/>
    <CheckedTextView
            android:id="@+id/ch_income"
            android:checked="false"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/text_income"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:layout_margin="8dp"/>
    <CheckedTextView
            android:id="@+id/ch_spending"
            android:checked="false"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/text_spending"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:layout_margin="8dp"/>

    <CheckedTextView
            android:id="@+id/ch_accumulation"
            android:checked="false"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/text_accumulation"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:layout_margin="8dp"/>
    <TextView
            android:id="@+id/tv_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/text_color"
            android:layout_margin="8dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_gravity="center_vertical">
        <Button
                android:id="@+id/btn_generate_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_getColor"
                android:layout_margin="8dp"/>
        <View android:id="@+id/v_color_container"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="50dp"
              android:layout_margin="8dp"
              android:layout_gravity="center"/>

    </LinearLayout>

    <Button
            android:id="@+id/btn_create_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:layout_margin="8dp"
            android:text="@string/text_save"/>


</LinearLayout>