<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="0dp"
        app:useDefaultMargins="false"
        android:columnCount="4">
    <Button
            android:id="@+id/key_7"
            style="@style/MyKeyboardButtons"
            android:text="7"
    />
    <Button
            android:id="@+id/key_8"
            style="@style/MyKeyboardButtons"
            android:text="8"/>
    <Button
            android:id="@+id/key_9"
            style="@style/MyKeyboardButtons"
            android:text="9"/>
    <Button
            android:id="@+id/key_delete"
            style="@style/MyKeyboardButtons"
            android:text="Delete"/>
    <Button
            android:id="@+id/key_4"
            style="@style/MyKeyboardButtons"
            android:text="4"/>
    <Button
            android:id="@+id/key_5"
            style="@style/MyKeyboardButtons"
            android:text="5"/>
    <Button
            android:id="@+id/key_6"
            style="@style/MyKeyboardButtons"
            android:text="6"/>
    <Button
            android:id="@+id/key_date"
            style="@style/MyKeyboardButtons"
            android:text="Date"/>
    <Button
            android:id="@+id/key_1"
            style="@style/MyKeyboardButtons"
            android:text="1"/>
    <Button
            android:id="@+id/key_2"
            style="@style/MyKeyboardButtons"
            android:text="2"/>
    <Button
            android:id="@+id/key_3"
            style="@style/MyKeyboardButtons"
            android:text="3"/>
    <Button
            android:id="@+id/key_enter"
            android:layout_height="0dp"
            android:layout_rowSpan="2"
            android:layout_columnSpan="1"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_gravity="fill"
            android:text="ENTER"/>
    <Button
            android:id="@+id/key_0"
            style="@style/MyKeyboardButtons"
            android:text="0"/>
    <Button
            android:id="@+id/key_000"
            style="@style/MyKeyboardButtons"
            android:text="000"/>
    <Button
            android:id="@+id/key_diveder"
            style="@style/MyKeyboardButtons"
            android:text=","/>

</GridLayout>
