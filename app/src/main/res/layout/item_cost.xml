<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/spending_item"
        android:layout_width="match_parent"
        android:layout_height="60dp">

    <com.example.holmi_production.money_counter_app.model.SquareImageView
            android:id="@+id/cost_item_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/cost_item_container"
            app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
            android:id="@+id/cost_item_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cost_item_image"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cost_item_category"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_cost_item_comment"
                app:layout_constraintLeft_toRightOf="@id/cost_item_image"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Категория" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cost_item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:maxLines="1"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/cost_item_image"
                app:layout_constraintTop_toBottomOf="@id/tv_cost_item_category"
                tools:text="..." />
    </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:layout_marginRight="8dp">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cost_item_sum"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:textSize="22sp"
                app:textAllCaps="true"
                android:gravity="center_vertical"
                tools:text="1500" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cost_item_date"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="12sp"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                tools:text="1500" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
