<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tool="http://schemas.android.com/tools"
        android:id="@+id/numbers_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <include
                android:id="@+id/key_category"
                layout="@layout/button_with_description"
                android:layout_width="0dp"
                android:layout_height="60dp"
                app:layout_constraintHorizontal_weight="7"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/purshace_sum_textview"
        />
        <TextView
                android:id="@+id/purshace_sum_textview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="#FFFFFF"
                android:background="@color/design_default_color_primary_variant"
                android:gravity="end|center_vertical"
                android:textAllCaps="true"
                android:textSize="40sp"
                android:paddingEnd="16dp"
                android:hint="0"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/key_category"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="14"
                app:layout_constraintVertical_weight="1"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tool:text="комментарий"
            android:textSize="26sp"
            android:textColor="@color/design_default_color_secondary"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:gravity="end|center_vertical"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:hint="комментарий"
            android:focusable="true"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_primary_variant"
    >
        <Button
                android:id="@+id/key_7"
                style="@style/MyKeyboardButtons"
                android:text="7"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/guideline2"
                android:background="@color/design_default_color_primary"
                android:foreground="?attr/selectableItemBackground"
        />
        <Button
                android:id="@+id/key_8"
                style="@style/MyKeyboardButtons"
                android:text="8"
                app:layout_constraintLeft_toRightOf="@id/key_7"
                app:layout_constraintBottom_toTopOf="@id/guideline2"
                android:background="#838383"
                android:foreground="?attr/selectableItemBackground"
        />
        <Button
                android:id="@+id/key_9"
                style="@style/MyKeyboardButtons"
                android:text="9"
                app:layout_constraintLeft_toRightOf="@id/key_8"
                app:layout_constraintBottom_toTopOf="@id/guideline2"
                android:background="@color/design_default_color_primary"
                android:foreground="?attr/selectableItemBackground"
        />
        <Button
                android:id="@+id/key_delete"
                style="@style/MyKeyboardButtons"
                android:text="Delete"
                app:layout_constraintLeft_toRightOf="@id/key_9"
                app:layout_constraintBottom_toTopOf="@id/guideline2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/design_default_color_primary"
                android:foreground="?attr/selectableItemBackground"
        />
        <Button
                android:id="@+id/key_4"
                style="@style/MyKeyboardButtons"
                android:text="4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/key_1"
                app:layout_constraintTop_toBottomOf="@id/guideline2"
                android:background="@color/design_default_color_primary"
                android:foreground="?attr/selectableItemBackground"
        />
        <Button
                android:id="@+id/key_5"
                style="@style/MyKeyboardButtons"
                android:text="5"
                app:layout_constraintLeft_toRightOf="@id/key_4"
                app:layout_constraintBottom_toTopOf="@id/key_1"

                app:layout_constraintTop_toBottomOf="@id/guideline2"
                android:background="@color/design_default_color_primary"
                android:foreground="?attr/selectableItemBackground"
        />
        <Button
                android:id="@+id/key_6"
                style="@style/MyKeyboardButtons"
                android:text="6"
                app:layout_constraintLeft_toRightOf="@id/key_5"
                app:layout_constraintBottom_toTopOf="@id/key_1"
                app:layout_constraintTop_toBottomOf="@id/guideline2"
                android:background="@color/design_default_color_primary"
                android:foreground="?attr/selectableItemBackground"
        />
        <Button
                android:id="@+id/key_1"
                style="@style/MyKeyboardButtons"
                android:text="1"
                app:layout_constraintBottom_toTopOf="@id/key_0"
                android:background="@color/design_default_color_primary"
                android:foreground="?attr/selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
        <Button
                android:id="@+id/key_2"
                style="@style/MyKeyboardButtons"
                android:text="2"
                app:layout_constraintLeft_toRightOf="@id/key_1"
                app:layout_constraintBottom_toTopOf="@id/key_0"
                android:background="@color/design_default_color_primary"
                android:foreground="?attr/selectableItemBackground"
        />
        <Button
                android:id="@+id/key_3"
                style="@style/MyKeyboardButtons"
                android:text="3"
                app:layout_constraintLeft_toRightOf="@id/key_2"
                app:layout_constraintBottom_toTopOf="@id/key_0"
                android:background="@color/design_default_color_primary"
        />

        <Button
                android:id="@+id/key_spending"
                android:text="@string/arrow_up"
                android:gravity="center"
                android:textSize="48sp"
                android:textColor="@color/design_default_color_error"
                app:layout_constraintBottom_toTopOf="@id/guideline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/key_3"
                app:layout_constraintTop_toBottomOf="@id/guideline2"
                android:background="@color/colorAccent"
                style="@style/MyKeyboardButtons"/>
        <Button
                android:id="@+id/key_income"
                android:text="@string/arrow_down"
                android:textSize="48sp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/key_3"
                app:layout_constraintTop_toTopOf="@id/guideline"
                android:background="@color/design_default_color_primary"
                style="@style/MyKeyboardButtons"
        />

        <Button
                android:id="@+id/key_0"
                style="@style/MyKeyboardButtons"
                android:text="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/key_divider"
                android:background="@color/design_default_color_primary"

        />
        <Button
                android:id="@+id/key_divider"
                style="@style/MyKeyboardButtons"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/key_income"
                android:text="."
                android:background="@color/design_default_color_primary"
        />
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="1dp"
                                                    android:id="@+id/guideline"
                                                    app:layout_constraintGuide_begin="125dp"
                                                    android:orientation="horizontal"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="0dp" android:id="@+id/guideline2"
                                                    app:layout_constraintGuide_begin="50dp"
                                                    android:orientation="horizontal"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

