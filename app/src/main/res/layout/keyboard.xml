<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/numbers_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:columnCount="4"
android:background="@color/colorPrimary">
    <Button
            android:id="@+id/key_7"
            style="@style/MyKeyboardButtons"
            android:text="7"
    />
    <Button
            android:id="@+id/key_8"
            style="@style/MyKeyboardButtons"
            android:text="8"
    />
    <Button
            android:id="@+id/key_9"
            style="@style/MyKeyboardButtons"
            android:text="9"
    />
    <Button
            android:id="@+id/key_delete"
            style="@style/MyKeyboardButtons"
            android:text="Delete"
    />
    <Button
            android:id="@+id/key_4"
            style="@style/MyKeyboardButtons"
            android:text="4"
    />
    <Button
            android:id="@+id/key_5"
            style="@style/MyKeyboardButtons"
            android:text="5"
    />
    <Button
            android:id="@+id/key_6"
            style="@style/MyKeyboardButtons"
            android:text="6"
    />
    <Button
            android:id="@+id/key_date"
            style="@style/MyKeyboardButtons"
            android:text="Date"
    />
    <Button
            android:id="@+id/key_1"
            style="@style/MyKeyboardButtons"
            android:text="1"
    />
    <Button
            android:id="@+id/key_2"
            style="@style/MyKeyboardButtons"
            android:text="2"
    />
    <Button
            android:id="@+id/key_3"
            style="@style/MyKeyboardButtons"
            android:text="3"
    />
    <Button
            android:id="@+id/key_enter"
            style="@style/MyKeyboardButtons"
            android:text="ENTER"
    />
    <Button
            android:id="@+id/key_0"
            style="@style/MyKeyboardButtons"
            android:text="0"
    />
    <Button
            android:id="@+id/key_000"
            style="@style/MyKeyboardButtons"
            android:text="000"
    />
    <Button
            android:id="@+id/key_divider"
            style="@style/MyKeyboardButtons"
            android:text="."
    />

</GridLayout>

