<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
                android:id="@+id/topbar_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="LEFT"
                android:src="@drawable/ic_bar"
                android:layout_marginStart="24dp"
                android:padding="0dp"/>
        <TextView
                android:id="@+id/topbar_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="26 ИЮЛЯ - 1 Августа 2019"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@id/topbar_left"
                app:layout_constraintRight_toLeftOf="@id/topbar_right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageButton
                android:id="@+id/topbar_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_bar"
                android:contentDescription="RIGHT"
                android:layout_marginRight="24dp"
                android:padding="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
