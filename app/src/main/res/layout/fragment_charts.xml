<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <TextView
        android:id="@+id/accountName"
        style="@style/MediumFontFamily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_rounded_corner_with_ripple_8dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/rubik_light"
        android:padding="4dp"
        tools:text="@string/account"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:drawableEndCompat="@drawable/ic_arrow_drop_down"
        app:drawableTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/currencyBadge"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@id/accountName"
        app:layout_constraintStart_toStartOf="@id/accountName"/>

    <TextView
        android:id="@+id/accountCurrency"
        style="@style/MediumFontFamily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_rounded_corner_with_ripple_8dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/rubik_light"
        android:padding="4dp"
        tools:text="@string/account"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:drawableEndCompat="@drawable/ic_arrow_drop_down"
        app:drawableTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.holmi_production.money_counter_app.ui.custom.CustomPieChart
        android:id="@+id/chart"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="4dp"
        app:borderWidth="12dp"
        app:isDrawText="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accountName" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/percentList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_rounded_8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        tools:itemCount="5"
        tools:listitem="@layout/item_percentage_categories"
        app:layout_constraintBottom_toBottomOf="@id/chart"
        app:layout_constraintStart_toEndOf="@id/chart"
        app:layout_constraintTop_toTopOf="@id/chart" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="percentList,chart" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detailsList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_rounded_8dp"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
