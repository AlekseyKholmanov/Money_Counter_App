<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_end_period"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:id="@+id/end_period_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text=""
            tools:text="BLABLALBA"
            android:textSize="20sp"
            android:layout_margin="8dp"/>
    <TextView
            android:id="@+id/end_period_date_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/end_period_header"
            android:text="За период с 06 по 10 "
            android:layout_margin="8dp"/>
    <TextView
            android:id="@+id/end_period_spended_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Потрачено:"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/end_period_date_row"
            android:layout_margin="8dp"/>

    <TextView
            android:id="@+id/end_period_spended_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5067.5 Рублей:"
            app:layout_constraintStart_toEndOf="@id/end_period_spended_text"
            app:layout_constraintTop_toBottomOf="@id/end_period_date_row"
            android:layout_margin="8dp"/>
    <TextView
            android:id="@+id/end_period_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Осталось:"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/end_period_spended_text"
            android:layout_margin="8dp"/>

    <TextView
            android:id="@+id/end_period_left_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1098.1 Рубль:"
            app:layout_constraintStart_toEndOf="@id/end_period_left_text"
            app:layout_constraintTop_toBottomOf="@id/end_period_spended_text"
            android:layout_margin="8dp"/>

    <TextView
            android:id="@+id/end_period_average_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Средняя трата в день:"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/end_period_left_text"
            android:layout_margin="8dp"/>

    <TextView
            android:id="@+id/end_period_average_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1098.1 Рубль:"
            app:layout_constraintStart_toEndOf="@id/end_period_average_text"
            app:layout_constraintTop_toBottomOf="@id/end_period_left_text"
            android:layout_margin="8dp"/>
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/endPeriod_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="24dp"
            android:text="ДАЛЕЕ"/>


</androidx.constraintlayout.widget.ConstraintLayout>
