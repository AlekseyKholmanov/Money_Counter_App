<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:background="@color/white"
    tools:showPaths="true">

    <TextView
        android:id="@+id/accountName"
        style="@style/MediumFontFamily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_rounded_corner_with_ripple_8dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/rubik_light"
        android:padding="4dp"
        android:text="@string/account"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:drawableEndCompat="@drawable/ic_arrow_drop_down"
        app:drawableTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/accountCurrency"
        style="@style/MediumFontFamily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_rounded_corner_with_ripple_8dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/rubik_light"
        android:padding="4dp"
        android:text="@string/account"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:drawableEndCompat="@drawable/ic_arrow_drop_down"
        app:drawableTint="@color/white"
        app:layout_constraintEnd_toStartOf="@id/currencyInfo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/currencyInfo"
        android:layout_width="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/bg_rounded_corner_with_ripple_8dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_information"
        app:layout_constraintBottom_toBottomOf="@id/accountCurrency"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/accountCurrency"
        app:tint="@color/white" />

    <LinearLayout
        android:id="@+id/accountSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accountName">

        <com.example.holmi_production.money_counter_app.ui.custom.AccountAmountText
            android:id="@+id/accountExpenses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="12dp"
            android:background="@color/white" />

        <com.example.holmi_production.money_counter_app.ui.custom.AccountAmountText
            android:id="@+id/accountIncome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="12dp"
            android:background="@color/white" />

        <com.example.holmi_production.money_counter_app.ui.custom.AccountAmountText
            android:id="@+id/accountBalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/accountItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/accountSummary" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/showBottom"
        style="@style/FabStyleInverted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/ic_24_add"
        android:text="@string/add_transaction"
        android:textSize="14sp"
        app:drawableTint="@color/textPrimaryInverted"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/textPrimaryInverted" />

</androidx.constraintlayout.widget.ConstraintLayout>