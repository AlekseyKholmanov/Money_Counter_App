<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/spending_item">
    <com.example.holmi_production.money_counter_app.model.SquareImageView
            android:id="@+id/cost_item_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/cost_item_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
    />
    <LinearLayout
            android:id="@+id/cost_item_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/cost_item_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cost_item_category"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@id/cost_item_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/cost_item_comment"
                android:textSize="16sp"
                tools:text="Категория"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cost_item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@id/cost_item_image"
                app:layout_constraintTop_toBottomOf="@id/cost_item_category"
                app:layout_constraintBottom_toBottomOf="parent"
                android:maxLines="1"
                android:textSize="16sp"
                tools:text="..."/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cost_item_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/cost_item_sum"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="26sp"
            android:layout_margin="4dp"/>
    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cost_item_sum"
            android:textSize="22sp"
            android:layout_marginEnd="16dp"
            app:textAllCaps="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="1500"/>

</androidx.constraintlayout.widget.ConstraintLayout>
