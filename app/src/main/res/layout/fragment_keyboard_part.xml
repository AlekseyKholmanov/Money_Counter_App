<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tool="http://schemas.android.com/tools"
        android:id="@+id/numbers_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
            android:id="@+id/key_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:rcIconHeight="0dp"
            app:rcIconWidth="0dp"
            app:rcBackgroundPadding="0dp"
            app:rcRadius="0dp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/design_default_color_primary_dark" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"    >

        <include
                android:id="@+id/key_category"
                layout="@layout/button_with_description"
                android:layout_width="0dp"
                android:layout_height="60dp"
                app:layout_constraintHorizontal_weight="7"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/purshace_sum_textview" />

        <TextView
                android:id="@+id/purshace_sum_textview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/design_default_color_primary_variant"
                android:gravity="end|center_vertical"
                android:hint="0"
                android:paddingEnd="16dp"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="14"
                app:layout_constraintLeft_toRightOf="@id/key_category"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_weight="1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
            android:id="@+id/container_chips"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scrollbars="none"
            android:visibility="gone"
            android:animateLayoutChanges="true">

        <com.google.android.material.chip.ChipGroup
                android:id="@+id/cg_subcategory_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:chipSpacingVertical="8dp"
                app:singleSelection="true" />
    </HorizontalScrollView>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/design_default_color_primary_dark" />

    <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="end|center_vertical"
            android:hint="комментарий"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="26sp"
            tool:text="комментарий" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_primary_dark"
            android:animateLayoutChanges="true">

        <Button
                android:id="@+id/key_7"
                style="@style/MyKeyboardButtons"
                android:layout_marginEnd="1dp"
                android:text="7"
                app:layout_constraintBottom_toTopOf="@id/h_25"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/v_22"
                app:layout_constraintTop_toTopOf="parent" />

        <Button
                android:id="@+id/key_8"
                style="@style/MyKeyboardButtons"
                android:layout_marginEnd="1dp"
                android:text="8"
                app:layout_constraintBottom_toTopOf="@id/h_25"
                app:layout_constraintLeft_toRightOf="@id/v_22"
                app:layout_constraintRight_toLeftOf="@id/v_44"
                app:layout_constraintTop_toTopOf="parent" />

        <Button
                android:id="@+id/key_9"
                style="@style/MyKeyboardButtons"
                android:layout_marginEnd="1dp"
                android:text="9"
                app:layout_constraintBottom_toTopOf="@id/h_25"
                app:layout_constraintLeft_toRightOf="@id/v_44"
                app:layout_constraintRight_toLeftOf="@id/v_66"
                app:layout_constraintTop_toTopOf="parent" />

        <Button
                android:id="@+id/key_delete"
                style="@style/MyKeyboardButtons"
                android:layout_marginEnd="1dp"
                android:text="Delete"
                app:layout_constraintBottom_toTopOf="@id/h_25"
                app:layout_constraintLeft_toRightOf="@id/v_66"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <Button
                android:id="@+id/key_4"
                style="@style/MyKeyboardButtons"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:text="4"
                app:layout_constraintBottom_toTopOf="@id/h_50"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/v_22"
                app:layout_constraintTop_toBottomOf="@id/h_25" />

        <Button
                android:id="@+id/key_5"
                style="@style/MyKeyboardButtons"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:text="5"
                app:layout_constraintBottom_toTopOf="@id/h_50"
                app:layout_constraintLeft_toRightOf="@id/v_22"
                app:layout_constraintRight_toLeftOf="@id/v_44"
                app:layout_constraintTop_toBottomOf="@id/h_25" />

        <Button
                android:id="@+id/key_6"
                style="@style/MyKeyboardButtons"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:text="6"
                app:layout_constraintBottom_toTopOf="@id/h_50"
                app:layout_constraintLeft_toRightOf="@id/v_44"
                app:layout_constraintRight_toLeftOf="@id/v_66"
                app:layout_constraintTop_toBottomOf="@id/h_25" />

        <Button
                android:id="@+id/key_1"
                style="@style/MyKeyboardButtons"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:text="1"
                app:layout_constraintBottom_toTopOf="@id/h_75"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/v_22"
                app:layout_constraintTop_toBottomOf="@id/h_50" />

        <Button
                android:id="@+id/key_2"
                style="@style/MyKeyboardButtons"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:text="2"
                app:layout_constraintBottom_toTopOf="@id/h_75"
                app:layout_constraintLeft_toRightOf="@id/v_22"
                app:layout_constraintRight_toLeftOf="@id/v_44"
                app:layout_constraintTop_toBottomOf="@id/h_50" />

        <Button
                android:id="@+id/key_3"
                style="@style/MyKeyboardButtons"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:text="3"
                app:layout_constraintBottom_toTopOf="@id/h_75"
                app:layout_constraintLeft_toRightOf="@id/v_44"
                app:layout_constraintRight_toLeftOf="@id/v_66"
                app:layout_constraintTop_toBottomOf="@id/h_50" />

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="1dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/v_66"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/h_25">

            <ImageButton
                    android:id="@+id/key_accumulation"
                    style="@style/MyKeyboardButtons"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_trending_up_black_24dp"
                    android:textColor="@color/colorYellow" />

            <ImageButton
                    android:id="@+id/key_spending"
                    style="@style/MyKeyboardButtons"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_arrow_up"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="48sp" />

            <ImageButton
                    android:id="@+id/key_income"
                    style="@style/MyKeyboardButtons"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_arrow_down"
                    android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <Button
                android:id="@+id/key_0"
                style="@style/MyKeyboardButtons"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:text="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/v_44"
                app:layout_constraintTop_toBottomOf="@id/h_75" />

        <Button
                android:id="@+id/key_divider"
                style="@style/MyKeyboardButtons"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:text="."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/v_44"
                app:layout_constraintRight_toLeftOf="@id/v_66"
                app:layout_constraintTop_toBottomOf="@id/h_75" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h_66"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.63" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h_25"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h_50"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h_75"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.75" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/v_22"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.22" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/v_44"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.44" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/v_66"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.66" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/design_default_color_primary_dark" />
</LinearLayout>

