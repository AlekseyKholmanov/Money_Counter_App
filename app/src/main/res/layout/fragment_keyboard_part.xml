<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tool="http://schemas.android.com/tools"
        android:id="@+id/numbers_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <include
                android:id="@+id/key_category"
                layout="@layout/button_with_description"
                android:layout_width="0dp"
                android:layout_height="60dp"
                app:layout_constraintHorizontal_weight="7"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/purshace_sum_textview"
        />
        <TextView
                android:id="@+id/purshace_sum_textview"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="#FFFFFF"
                android:background="@color/design_default_color_primary_variant"
                android:gravity="end|center_vertical"
                android:textAllCaps="true"
                android:textSize="40sp"
                android:paddingEnd="16dp"
                android:hint="0"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/key_category"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="14"
                app:layout_constraintVertical_weight="1"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <HorizontalScrollView
            android:id="@+id/container_chips"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
                android:id="@+id/cg_subcategory_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:singleSelection="true"
                app:chipSpacingVertical="8dp"/>
    </HorizontalScrollView>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/design_default_color_primary_dark"/>
    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tool:text="комментарий"
            android:textSize="26sp"
            android:textColor="@color/design_default_color_primary_dark"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:gravity="end|center_vertical"
            android:hint="комментарий"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_primary_variant">
        <Button
                android:id="@+id/key_7"
                style="@style/MyKeyboardButtons"
                android:text="7"
                android:layout_marginEnd="1dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/v_22"
                app:layout_constraintBottom_toTopOf="@id/h_25"
                app:layout_constraintTop_toTopOf="parent"
        />
        <Button
                android:id="@+id/key_8"
                style="@style/MyKeyboardButtons"
                android:text="8"
                android:background="#838383"
                android:layout_marginEnd="1dp"
                app:layout_constraintLeft_toRightOf="@id/v_22"
                app:layout_constraintRight_toLeftOf="@id/v_44"
                app:layout_constraintBottom_toTopOf="@id/h_25"
                app:layout_constraintTop_toTopOf="parent"
        />
        <Button
                android:id="@+id/key_9"
                style="@style/MyKeyboardButtons"
                android:text="9"
                android:layout_marginEnd="1dp"
                app:layout_constraintRight_toLeftOf="@id/v_66"
                app:layout_constraintLeft_toRightOf="@id/v_44"
                app:layout_constraintBottom_toTopOf="@id/h_25"
                app:layout_constraintTop_toTopOf="parent"
        />
        <Button
                android:id="@+id/key_delete"
                style="@style/MyKeyboardButtons"
                android:text="Delete"
                app:layout_constraintLeft_toRightOf="@id/v_66"
                app:layout_constraintBottom_toTopOf="@id/h_25"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />
        <Button
                android:id="@+id/key_4"
                style="@style/MyKeyboardButtons"
                android:text="4"
                android:layout_marginEnd="1dp"
                android:layout_marginTop="1dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/h_50"
                app:layout_constraintTop_toBottomOf="@id/h_25"
                app:layout_constraintRight_toRightOf="@id/v_22"
        />
        <Button
                android:id="@+id/key_5"
                style="@style/MyKeyboardButtons"
                android:text="5"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                app:layout_constraintLeft_toRightOf="@id/v_22"
                app:layout_constraintRight_toLeftOf="@id/v_44"
                app:layout_constraintBottom_toTopOf="@id/h_50"
                app:layout_constraintTop_toBottomOf="@id/h_25"
        />
        <Button
                android:id="@+id/key_6"
                style="@style/MyKeyboardButtons"
                android:text="6"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                app:layout_constraintRight_toLeftOf="@id/v_66"
                app:layout_constraintLeft_toRightOf="@id/v_44"
                app:layout_constraintBottom_toTopOf="@id/h_50"
                app:layout_constraintTop_toBottomOf="@id/h_25"
        />
        <Button
                android:id="@+id/key_1"
                style="@style/MyKeyboardButtons"
                android:text="1"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                app:layout_constraintBottom_toTopOf="@id/h_75"
                app:layout_constraintTop_toBottomOf="@id/h_50"
                app:layout_constraintRight_toRightOf="@id/v_22"
                app:layout_constraintLeft_toLeftOf="parent"/>
        <Button
                android:id="@+id/key_2"
                style="@style/MyKeyboardButtons"
                android:text="2"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                app:layout_constraintLeft_toRightOf="@id/v_22"
                app:layout_constraintBottom_toTopOf="@id/h_75"
                app:layout_constraintRight_toLeftOf="@id/v_44"
                app:layout_constraintTop_toBottomOf="@id/h_50"
        />
        <Button
                android:id="@+id/key_3"
                style="@style/MyKeyboardButtons"
                android:text="3"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                app:layout_constraintRight_toLeftOf="@id/v_66"
                app:layout_constraintLeft_toRightOf="@id/v_44"
                app:layout_constraintBottom_toTopOf="@id/h_75"
                app:layout_constraintTop_toBottomOf="@id/h_50"
        />
        <LinearLayout android:layout_width="0dp" android:layout_height="0dp"
                      app:layout_constraintTop_toBottomOf="@id/h_25"
                      app:layout_constraintLeft_toRightOf="@id/v_66"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintBottom_toBottomOf="parent"
                      android:gravity="center"
                      android:orientation="vertical">
            <ImageButton
                    style="@style/MyKeyboardButtons"
                    android:src="@drawable/ic_trending_up_black_24dp"
                    android:id="@+id/key_accumulation"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:textColor="@color/colorYellow"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
            />
            <ImageButton
                    style="@style/MyKeyboardButtons"
                    android:id="@+id/key_spending"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_arrow_up"
                    android:scaleType="fitCenter"
                    android:gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:textSize="48sp"
                    android:textColor="@color/design_default_color_error"/>
            <ImageButton
                    style="@style/MyKeyboardButtons"
                    android:id="@+id/key_income"
                    android:src="@drawable/ic_arrow_down"
                    android:scaleType="fitCenter"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
            />
        </LinearLayout>
        <Button
                android:id="@+id/key_0"
                style="@style/MyKeyboardButtons"
                android:text="0"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/h_75"
                app:layout_constraintRight_toLeftOf="@id/v_44"
        />
        <Button
                android:id="@+id/key_divider"
                style="@style/MyKeyboardButtons"
                android:text="."
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                app:layout_constraintTop_toBottomOf="@id/h_75"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/v_66"
                app:layout_constraintLeft_toRightOf="@id/v_44"
        />
        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/h_66"
                app:layout_constraintGuide_percent="0.63"
                android:orientation="horizontal"/>
        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/h_25"
                app:layout_constraintGuide_percent="0.25"
                android:orientation="horizontal"/>
        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/h_50"
                app:layout_constraintGuide_percent="0.5"
                android:orientation="horizontal"/>
        <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:id="@+id/h_75"
                app:layout_constraintGuide_percent="0.75"
                android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:id="@+id/v_22"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.22"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:id="@+id/v_44"
                app:layout_constraintGuide_percent="0.44"
                android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:id="@+id/v_66"
                app:layout_constraintGuide_percent="0.66"
                android:orientation="vertical"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/design_default_color_primary_dark"/>
</LinearLayout>

