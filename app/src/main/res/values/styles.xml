<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/design_default_color_primary_variant</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:datePickerDialogTheme">@style/AppTheme.DatePicker</item>
        <item name="navigationIcon">@drawable/ic_back</item>
    </style>

    <style name="AppTheme.Onboarding">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>


    <style name="AppTheme.RangeDatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.DatePicker" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="dialogCornerRadius">8dp</item>
        <item name="android:buttonBarButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyKeyboardButtons" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorYellow</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
    </style>

    <style name="WideDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">60%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>
        <item name="strokeColor">@android:color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGreen</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_8dp_transparent</item>
    </style>


    <style name="MediumFontFamily" parent="AppTheme">
        <item name="fontFamily">@font/rubik_medium</item>
    </style>

    <style name="TextInputColorStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="colorControlNormal">@color/textPrimaryInverted</item>
        <item name="colorControlActivated">@color/textPrimaryInverted</item>
        <item name="colorControlHighlight">@color/textPrimaryInverted</item>
        <item name="android:textColor">@color/text_input_box_stroke</item>
        <item name="android:textColorHint">@color/text_input_box_stroke</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FabStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="drawableTint">@color/textPrimary</item>
        <item name="rippleColor">@color/textPrimary</item>
        <item name="backgroundTint">@color/background</item>
    </style>
    <style name="FabStyleInverted" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="android:textColor">@color/background</item>
        <item name="drawableTint">@color/background</item>
        <item name="rippleColor">@color/background</item>
        <item name="backgroundTint">@color/textPrimary</item>
    </style>

    <style name="OverFlow" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="srcCompat">@drawable/ic_back</item>
    </style>

</resources>
